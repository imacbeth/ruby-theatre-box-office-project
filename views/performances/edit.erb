<div class="container">

  <form action="/performances" method="post">

    <div class="form-wrapper">

      <div class="form-line">
        <label for="show-selection">Select a show:</label>
        <select name="show-selection" id="show-selection">
          <% @shows.each do |show|  %>
            <option value=<%=show.id %> ><%= show.name %></option>
            <% end %>
        </select>
      </div>

      <div class="form-line">
      <label for="start_time">Please enter a date and start time:</label>
        <input type="datetime-local" name="start_time" id="start_time"/>
        <label for="empty_seats">Please enter the maximum seating capacity for the venue</label>
        <input type="number" name="empty_seats">
      </div>

      <div class="form-line">
      <input class="button" type="submit" value="Create new performance">
      </div>

    </div>
  </form>

</div>
